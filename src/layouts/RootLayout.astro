---
import "../styles/global.css";
import { Font } from "astro:assets";
import { ClientRouter } from 'astro:transitions';
import LoadingIndicator from "astro-loading-indicator/component"

const { title, description } = Astro.props;

const defaultTitle = "Sumit Poudel";
const defaultDescription = "Hello, I'm Sumit Poudel, a BCA student passionate about coding. Explore my portfolio, projects, and skills";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ?? defaultTitle}</title>
		<meta name="description" content={description ?? defaultDescription} />

		<meta property="og:url" content="https://sumit-poudel.com.np/" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={defaultTitle} />
		<meta property="og:description" content={defaultDescription} />
		<meta property="og:image" content="/social-image.png" />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content="nikola.fluidinterfaces.com" />
		<meta property="twitter:url" content="https://sumit-poudel.com.np/" />
		<meta name="twitter:title" content={defaultTitle} />
		<meta name="twitter:description" content={defaultDescription} />
		<meta name="twitter:image" content="/social-image.png" />

		<Font cssVariable="--font-geist" preload />
		<ClientRouter />
		<LoadingIndicator color="#f4f4f5" height="2px" />

	</head>
	<body class="font-sans min-h-screen bg-zinc-900">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
